@using System.Globalization
@using TimeDois.Extensoes
@model TimeDois.ViewModel.OrcamentoViewModel
@{
    Layout = null;
}
<section class="hero is-primary-darkened">
    <div class="hero-head">
        <div class="container" style="padding: 10px; align-items: center;">
            <div class="columns is-vcentered">
                <div class="column is-narrow" style="font-size: 27px; height: 47px; padding-right: 3px;">
                    <i class="fa fa-dollar"></i>
                </div>
                <div class="column">
                    <progress class="progress @Model.ClasseDaBarra" value="@Model.PorcertagemUtilizada.ToString(CultureInfo.InvariantCulture)" max="100">@Model.PorcertagemUtilizada%</progress>
                </div>
                <div class="column is-narrow">
                    @Model.ValorUtilizado.FormatarMonetarioOuZero() / @Model.ValorDisponivel.FormatarMonetarioOuZero() <strong style="color: white">(@Model.PorcertagemUtilizada%)</strong>
                </div>
            </div>
        </div>
    </div>
</section>

