@using System.Globalization
@using TimeDois.Extensoes
@model TimeDois.ViewModel.OrcamentoViewModel
@{
    Layout = null;
}
<section class="hero is-primary-darkened">
    <div class="hero-head">
        <div class="container" style="padding: 10px; align-items: center;">
            <div class="columns is-vcentered" style="position: relative">
                <div class="column is-narrow" style="font-size: 37px; height: 47px; padding-right: 3px; position: absolute; top: 0;">
                    <i class="fa fa-dollar"></i>
                </div>
                <div class="column" style="padding-left: 40px;">
                    <progress class="progress @Model.ClasseDaBarra" value="@Model.PorcertagemUtilizada.ToString(CultureInfo.InvariantCulture)" max="100" style="margin: 5px 0">@Model.PorcertagemUtilizada%</progress>
                    <p>@Model.ValorUtilizado.FormatarMonetarioOuZero() / @Model.ValorDisponivel.FormatarMonetarioOuZero() <strong style="color: white">(@Model.PorcertagemUtilizada%)</strong></p>
                </div>
            </div>
        </div>
    </div>
</section>

